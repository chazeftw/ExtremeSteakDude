<UserControl x:Class="ExtremeSteakDude.View.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExtremeSteakDude.View"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Button x:Name="NewGame" Content="NewGame" Margin="354,160,0,0" Command="{Binding NewPlayerCommand}" Click="NewGame_Click" />
        <Button x:Name="Continue" Content="Continue" Margin="354,290,0,0" Click="Continue_Click"/>
        <Button x:Name="HighScore" Content="HighScore" Margin="354,420,0,0" Click="HighScore_Click" />
        <Button x:Name="Exit" Content="Exit" Margin="354,550,0,0" Click="Exit_Click"/>
        <Button x:Name="Test" Content="Test" Margin="69,372,0,0" Click="Test_Click" Width="195" Height="89"/>

    </Grid>
</UserControl>
