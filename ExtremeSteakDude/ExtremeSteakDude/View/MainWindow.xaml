<Window x:Class="ExtremeSteakDude.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        Height="720"
        Width="1280"
        Title="ExtremeSteakDude"
        xmlns:ViewModel="clr-namespace:ExtremeSteakDude.ViewModel"
        >
    <!-- DataContext="{Binding Main, Source={StaticResource Locator}}"
        ResizeMode="NoResize"-->
    <!-- Setting the background the our mainmenubg.jpg -->
    <Window.DataContext>
        <ViewModel:MainViewModel />
    </Window.DataContext>

    <Window.Background>
        <ImageBrush x:Name="mainbg" ImageSource="../Levels/mainmenubg.jpg" />
    </Window.Background>

    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <ItemsControl ItemsSource="{Binding Lines}"/>




</Window>
