<Window x:Class="ExtremeSteakDude.ViewModel.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExtremeSteakDude.ViewModel"
        mc:Ignorable="d"
        Title="GameWindow" Height="1280" Width="720"
        PreviewKeyDown="Window_PreviewKeyDown"
        PreviewKeyUp="Window_PreviewKeyUp">
    <Grid>
        <Image x:Name="map" HorizontalAlignment="Left" Height="1280" Margin="0,0,-6.4,-29.6" VerticalAlignment="Top" Width="720" Source="../Levels\level_1_1.bmp"/>

        <Image x:Name="player" HorizontalAlignment="Left" Height="32" Margin="{Binding Path=Player},{Binding Path=Player.y},0,0" VerticalAlignment="Top" Width="32" Source="/ExtremeSteakDude;component/Levels/SMB first look.bmp"/>
        
    </Grid>
</Window>
